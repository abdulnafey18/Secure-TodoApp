            <TextField fx:id="textNewPassword" layoutX="46.0" layoutY="95.0" prefHeight="25.0" prefWidth="220.0" promptText="New Password" />
            <ComboBox fx:id="comboLock" layoutX="46.0" layoutY="138.0" prefHeight="25.0" prefWidth="220.0" promptText="Unlock" />
