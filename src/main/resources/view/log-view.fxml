<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPaneLog" prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LogController">
   <children>
      <Label alignment="CENTER" layoutX="4.0" layoutY="6.0" prefHeight="17.0" prefWidth="792.0" text="Monitoring" textFill="#f21a1a">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Button fx:id="btnBack" layoutX="22.0" layoutY="421.0" mnemonicParsing="false" onAction="#onBackButtonClicked" text="Back" />
      <TableView fx:id="tabelViewLog" layoutX="192.0" layoutY="86.0" prefHeight="400.0" prefWidth="604.0">
        <columns>
            <TableColumn fx:id="columnId" prefWidth="59.0" text="id" />
          <TableColumn fx:id="columnCreated" prefWidth="91.0" text="Created" />
          <TableColumn fx:id="columnLevel" prefWidth="75.0" text="Level" />
            <TableColumn fx:id="columnMessage" prefWidth="246.0" text="message" />
        </columns>
      </TableView>
      <ComboBox fx:id="comboFilter" layoutX="23.0" layoutY="86.0" prefWidth="150.0" promptText="Filter By" />
      <Button fx:id="btnRead" layoutX="23.0" layoutY="153.0" mnemonicParsing="false" onAction="#onReadLogClicked" prefHeight="25.0" prefWidth="150.0" text="Read Logfile" />
      <TextArea fx:id="textAreaLog" layoutX="13.0" layoutY="217.0" prefHeight="181.0" prefWidth="171.0" />
      <Label fx:id="labelInfo" layoutX="29.0" layoutY="460.0" text="Label" />
   </children>
</AnchorPane>
